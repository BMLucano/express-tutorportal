{
  "name": "rithmschool-start-ts-express",
  "version": "1.0.0",
  "homepage": "https://github.com/rithmschool/start/",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "build": "webpack",
    "start": "node build/server.js",
    "start:debug": "node --inspect-brk $npm_package_main",
    "test": "vitest ts --pool forks --poolOptions.forks.singleFork",
    "test:file": "vitest $1 --pool forks --poolOptions.forks.singleFork",
    "test:cov": "vitest ts --coverage --pool forks --poolOptions.forks.singleFork",
    "test:debug": "vitest -t *.ts --run --inspect-brk --no-file-parallelism"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/colors": "^1.2.1",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.16",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^6.0.2",
    "html-loader": "^5.1.0",
    "supertest": "^6.3.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "vitest": "^1.2.2",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "^5.0.0-beta.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "zod": "^3.23.8"
  }
}
